<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.homemaker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_glimpse_launcher"
        android:label="@string/shr_app_name"
        android:roundIcon="@mipmap/ic_glimpse_launcher_round"
        android:supportsRtl="true"
        android:name="com.example.homemaker.application.ShrineApplication"
        android:theme="@style/Theme.Shrine">

        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />

        <activity android:name="com.example.homemaker.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"></activity>
    </application>
</manifest>
